<!DOCTYPE html>
<html lang="en">

<head>
  <meta charset="UTF-8">
  <meta http-equiv="X-UA-Compatible" content="IE=edge">
  <meta name="viewport" content="width=device-width, initial-scale=1.0">
  <title>Apna Cinema</title>
  <link rel="shortcut icon" href="/static/pic/logo/AC favi logo.png" type="image/x-icon">
  <link rel="stylesheet" href="https://cdn.jsdelivr.net/npm/bootstrap@4.0.0/dist/css/bootstrap.min.css"
    integrity="sha384-Gn5384xqQ1aoWXA+058RXPxPg6fy4IWvTNh0E263XmFcJlSAwiGgFAW/dAiS6JXm" crossorigin="anonymous">
  <link rel="stylesheet" href="/static/home.css" />
  <link rel="stylesheet" href="https://cdnjs.cloudflare.com/ajax/libs/font-awesome/4.7.0/css/font-awesome.min.css">
</head>

<body>
  <!-- The overlay -->
  <div id="myNav" class="overlay">

    <!-- Overlay content -->
    <div class="overlay-content">
      <img src="/static/pic/logo/AC favi logo.png" alt="">
      <p>APNA CINEMA</p>
      <span class="loader"></span>

    </div>

  </div>



  <!-- {{!-- navbar section start --}} -->
  <header>
    <%- include("../partials/navbar.ejs") %>
  </header>
  <!-- {{!-- navbar section end --}} -->

  <!-- {{!-- main content start --}} -->
  <main>
    <div id="carouselExampleControls" class="carousel slide" data-ride="carousel">
      <div class="carousel-inner">

        <% i=0%>
        <% moviedata.forEach(function(movie){ %>
            <% if(i==0){ %>
              

              <div class="carousel-item active">
                <img class="d-block w-100 " src="<%=movie.poster%>" alt="First slide">
              </div>
              <%i=i+1%>
              <%}else{%>
                  <div class="carousel-item">
                    <img class="d-block w-100" src="<%=movie.poster%>" alt="Second slide">
                  </div>
                  <%}%>
                  <%})%>
                  <% upmoviedata.forEach(function(movie){ %>
                    
                          <div class="carousel-item">
                            <img class="d-block w-100" src="<%=movie.poster%>" alt="Second slide">
                          </div>
                    
                          <%})%>
      </div>

      <a class="carousel-control-prev" href="#carouselExampleControls" role="button" data-slide="prev">
        <span class="carousel-control-prev-icon" aria-hidden="true"></span>
        <span class="sr-only">Previous</span>
      </a>
      <a class="carousel-control-next" href="#carouselExampleControls" role="button" data-slide="next">
        <span class="carousel-control-next-icon" aria-hidden="true"></span>
        <span class="sr-only">Next</span>
      </a>
    </div>

    <!-- {{!-- Now Showing --}} -->
    <div class="showing">
      <h1>Now Showing</h1>
      <div class="row">
        <% moviedata.forEach(function(movie){ %>
          <div class="card-column ">
            <img src="<%=movie.image%>" class="card-img-top" alt="...">
            <div class="card-body  ">
              <h5 class="card-title">
                <%= movie.moviename%>
              </h5>
              
              <p>
                <%=movie.movieInfo%>
              </p>

              <a href="/<%=movie.url%>" name="" class="btn btn-primary bookBtn">
                Book Now
              </a>
            </div>


          </div>
          <%})%>

      </div>
    </div>

    <!-- {{!-- Upcoming Movies --}} -->
    <div class="showing">
      <h1>Upcoming Movies</h1>


      <div class="row">
        <% upmoviedata.forEach(function(movie){ %>
          <div class="card-column ">
            <img src="<%=movie.image%>" class="card-img-top" alt="...">
            <div class="card-body">
              <h5 class="card-title">
                <%= movie.moviename%>
              </h5>
              <h5 class="card-title">
                <%= movie.date%>
              </h5>
              <p style="overflow:hidden ;">
                <%=movie.movieInfo%>
              </p>

              <a href="/<%=movie.url%>" class="btn btn-primary bookBtn">
                Book Now
              </a>
            </div>


          </div>
          <%})%>
      </div>
    </div>
  </main>
  <!-- {{!-- main content end --}} -->

  <!-- {{!-- footer start --}} -->
  <%- include("../partials/footer.ejs") %>
    <!-- {{!-- footer end --}} -->
    <script src="https://code.jquery.com/jquery-3.2.1.slim.min.js"
      integrity="sha384-KJ3o2DKtIkvYIK3UENzmM7KCkRr/rE9/Qpg6aAZGJwFDMVNA/GpGFF93hXpG5KkN"
      crossorigin="anonymous"></script>
    <script src="https://cdn.jsdelivr.net/npm/popper.js@1.12.9/dist/umd/popper.min.js"
      integrity="sha384-ApNbgh9B+Y1QKtv3Rn7W3mgPxhU9K/ScQsAP7hUibX39j7fakFPskvXusvfa0b4Q"
      crossorigin="anonymous"></script>
    <script src="https://cdn.jsdelivr.net/npm/bootstrap@4.0.0/dist/js/bootstrap.min.js"
      integrity="sha384-JZR6Spejh4U02d8jOt6vLEHfe/JQGiRRSQQxSfFWpi1MquVdAyjUar5+76PVCmYl"
      crossorigin="anonymous"></script>
</body>
<script>
  window.onload = openNav();
  window.history.pushState("","","/");


  
  setTimeout(() => { closeNav(); }, 2000)
  /* Open */
  function openNav() {
    document.getElementById("myNav").style.display = "block";
    
  }
  

  /* Close */
  function closeNav() {
    document.getElementById("myNav").style.display = "none";
  }
  function scrl(element) {
    window.scrollTo(0, 2080);
  }
  function scrol(element) {
    window.scrollTo(0, 750);
  }

</script>

</html>